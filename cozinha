<div id="lista"></div>

<script>
function carregar(){
 let pedidos=JSON.parse(localStorage.getItem("pedidos")||"[]");
 let div=document.getElementById("lista");
 div.innerHTML="";
 pedidos.forEach((p,i)=>{
  if(p.status!="pronto"){
   div.innerHTML+=`
   <div class="card">
    <b>Pedido ${p.id}</b>
    <ul>${p.itens.map(x=>"<li>"+x+"</li>").join("")}</ul>
    <button onclick="pronto(${i})">PRONTO</button>
   </div>`;
  }
 });
}
function pronto(i){
 let pedidos=JSON.parse(localStorage.getItem("pedidos"));
 pedidos[i].status="pronto";
 localStorage.setItem("pedidos",JSON.stringify(pedidos));
 carregar();
}
setInterval(carregar,1000);
</script>

